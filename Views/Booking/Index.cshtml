@model IEnumerable<Aeromvp.Models.Booking>
@{
    ViewData["Title"] = "Reservas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Reservas</h1>
    <a class="btn btn-primary" asp-action="Create">Nueva reserva</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>CÃ³digo</th>
            <th>Pasajero</th>
            <th>Vuelo</th>
            <th>Tarifa</th>
            <th>Estado</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.LocatorCode</td>
            <td>@(item.Passenger != null ? $"{item.Passenger.FirstName} {item.Passenger.LastName}" : "-")</td>
            <td>
                @if (item.Flight != null)
                {
                    <span>@item.Flight.FlightNumber (@item.Flight.OriginAirportCode - @item.Flight.DestinationAirportCode)</span>
                }
                else
                {
                    <span>-</span>
                }
            </td>
            <td>@item.Fare?.FareType ?? "-"</td>
            <td>@item.Status</td>
            <td>@item.TotalPrice.ToString("C")</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.BookingId">Detalles</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.BookingId">Editar</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.BookingId">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
