@model IEnumerable<Aeromvp.Models.Passenger>
@{
    ViewData["Title"] = "Pasajeros";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Pasajeros</h1>
    <a class="btn btn-primary" asp-action="Create">Nuevo pasajero</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Documento</th>
            <th>Email</th>
            <th>Tel√©fono</th>
            <th>Ciudad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName @item.LastName</td>
            <td>@item.DocumentType @item.DocumentNumber</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            <td>@(string.Join(", ", new[] { item.City, item.Country }.Where(s => !string.IsNullOrWhiteSpace(s))))</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.PassengerId">Detalles</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.PassengerId">Editar</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.PassengerId">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
