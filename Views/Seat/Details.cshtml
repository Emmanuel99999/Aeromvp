@model Aeromvp.Models.Seat
@{
    ViewData["Title"] = "Detalle de asiento";
}

<h1>Detalle de asiento</h1>

<div class="mb-3">
    <a class="btn btn-outline-secondary" asp-action="Index">Volver al listado</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.SeatId">Editar</a>
</div>

<dl class="row">
    <dt class="col-sm-3">Leg</dt>
    <dd class="col-sm-9">@Model.Leg?.LegId ?? Model.LegId</dd>

    <dt class="col-sm-3">Número</dt>
    <dd class="col-sm-9">@Model.SeatNumber</dd>

    <dt class="col-sm-3">Cabina</dt>
    <dd class="col-sm-9">@Model.CabinClass ?? "-"</dd>

    <dt class="col-sm-3">Tipo</dt>
    <dd class="col-sm-9">@Model.SeatType ?? "-"</dd>

    <dt class="col-sm-3">Disponible</dt>
    <dd class="col-sm-9">@((Model.IsAvailable ? "Sí" : "No"))</dd>

    <dt class="col-sm-3">Bloqueado</dt>
    <dd class="col-sm-9">@((Model.IsBlocked ? "Sí" : "No"))</dd>

    <dt class="col-sm-3">Recargo</dt>
    <dd class="col-sm-9">@Model.ExtraFee.ToString("C")</dd>
</dl>
