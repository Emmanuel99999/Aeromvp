@model Aeromvp.Models.Ticket
@{
    ViewData["Title"] = "Editar ticket";
    var passengers = ViewData["Passengers"] as List<Aeromvp.Models.Passenger> ?? new();
    var flights = ViewData["Flights"] as List<Aeromvp.Models.Flight> ?? new();
    var bookings = ViewData["Bookings"] as List<Aeromvp.Models.Booking> ?? new();
    string[] statusOptions = { "Pending", "Issued", "Used", "Refunded" };
}

<h1>Editar ticket</h1>

<form asp-action="Edit" method="post" class="card card-body shadow-sm">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="TicketId" />

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="TicketNumber" class="form-label"></label>
            <input asp-for="TicketNumber" class="form-control" />
            <span asp-validation-for="TicketNumber" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Pasajero</label>
            <select asp-for="PassengerId" class="form-select" required>
                <option value="">Seleccione pasajero</option>
                @foreach (var p in passengers)
                {
                    <option value="@p.PassengerId" selected="@(Model.PassengerId == p.PassengerId ? "selected" : null)">
                        @($"{p.FirstName} {p.LastName}")
                    </option>
                }
            </select>
            <span asp-validation-for="PassengerId" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Reserva</label>
            <select asp-for="BookingId" class="form-select" required>
                <option value="">Seleccione reserva</option>
                @foreach (var b in bookings)
                {
                    <option value="@b.BookingId" selected="@(Model.BookingId == b.BookingId ? "selected" : null)">@b.LocatorCode</option>
                }
            </select>
            <span asp-validation-for="BookingId" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mt-1">
        <div class="col-md-4">
            <label class="form-label">Vuelo</label>
            <select asp-for="FlightId" class="form-select" required>
                <option value="">Seleccione vuelo</option>
                @foreach (var f in flights)
                {
                    <option value="@f.FlightId" selected="@(Model.FlightId == f.FlightId ? "selected" : null)">
                        @($"{f.FlightNumber} {f.OriginAirportCode}-{f.DestinationAirportCode}")
                    </option>
                }
            </select>
            <span asp-validation-for="FlightId" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="FareId" class="form-label"></label>
            <input asp-for="FareId" class="form-control" type="number" min="1" />
            <span class="form-text">Ingrese el ID de tarifa aplicable.</span>
            <span asp-validation-for="FareId" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Estado</label>
            <select asp-for="Status" class="form-select">
                @foreach (var s in statusOptions)
                {
                    <option value="@s" selected="@(Model.Status == s ? "selected" : null)">@s</option>
                }
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mt-1">
        <div class="col-md-6">
            <label asp-for="FinalPrice" class="form-label"></label>
            <input asp-for="FinalPrice" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="FinalPrice" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="DeliveryEmail" class="form-label"></label>
            <input asp-for="DeliveryEmail" class="form-control" />
            <span asp-validation-for="DeliveryEmail" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mt-1">
        <div class="col-md-6">
            <label asp-for="IssuedAtUtc" class="form-label"></label>
            <input asp-for="IssuedAtUtc" class="form-control" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" />
            <span asp-validation-for="IssuedAtUtc" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="CreatedAtUtc" class="form-label"></label>
            <input asp-for="CreatedAtUtc" class="form-control" readonly />
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
