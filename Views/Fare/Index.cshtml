@model IEnumerable<Aeromvp.Models.Fare>
@{
    ViewData["Title"] = "Tarifas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Tarifas</h1>
    <a class="btn btn-primary" asp-action="Create">Nueva tarifa</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Tipo</th>
            <th>Vuelo</th>
            <th>Cabina</th>
            <th>Reembolso</th>
            <th>Cambios</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FareType</td>
            <td>@(item.Flight != null ? $"{item.Flight.FlightNumber} {item.Flight.OriginAirportCode}-{item.Flight.DestinationAirportCode}" : "-")</td>
            <td>@item.CabinClass ?? "-"</td>
            <td>@(item.AllowRefund ? "Sí" : "No")</td>
            <td>@(item.AllowChanges ? "Sí" : "No")</td>
            <td>@item.TotalPrice.ToString("C")</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.FareId">Detalles</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.FareId">Editar</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.FareId">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
