@model Aeromvp.Models.Leg
@{
    ViewData["Title"] = "Eliminar tramo";
}

<h1>Eliminar tramo</h1>

<div class="alert alert-warning">
    Â¿Confirma que desea eliminar el tramo @Model.SegmentNumber del vuelo @(Model.Flight != null ? Model.Flight.FlightNumber : "-")?
</div>

<dl class="row">
    <dt class="col-sm-3">Origen</dt>
    <dd class="col-sm-9">@Model.OriginAirportCode</dd>

    <dt class="col-sm-3">Destino</dt>
    <dd class="col-sm-9">@Model.DestinationAirportCode</dd>

    <dt class="col-sm-3">Salida</dt>
    <dd class="col-sm-9">@Model.DepartureTimeUtc.ToLocalTime().ToString("g")</dd>

    <dt class="col-sm-3">Llegada</dt>
    <dd class="col-sm-9">@Model.ArrivalTimeUtc.ToLocalTime().ToString("g")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="LegId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
