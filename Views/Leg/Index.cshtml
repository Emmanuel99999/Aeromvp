@model IEnumerable<Aeromvp.Models.Leg>
@{
    ViewData["Title"] = "Tramos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Tramos</h1>
    <a class="btn btn-primary" asp-action="Create">Nuevo tramo</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Vuelo</th>
            <th>Segmento</th>
            <th>Origen</th>
            <th>Destino</th>
            <th>Salida</th>
            <th>Llegada</th>
            <th>Duraci√≥n</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(item.Flight != null ? $"{item.Flight.FlightNumber}" : "-")</td>
            <td>@item.SegmentNumber</td>
            <td>@item.OriginAirportCode</td>
            <td>@item.DestinationAirportCode</td>
            <td>@item.DepartureTimeUtc.ToLocalTime().ToString("g")</td>
            <td>@item.ArrivalTimeUtc.ToLocalTime().ToString("g")</td>
            <td>@item.DurationMinutes min</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.LegId">Detalles</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.LegId">Editar</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.LegId">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
