@model Aeromvp.Models.Payment
@{
    ViewData["Title"] = "Eliminar pago";
}

<h1>Eliminar pago</h1>

<div class="alert alert-warning">
    Â¿Confirma que desea eliminar el pago <strong>#@Model.PaymentId</strong>?
</div>

<dl class="row">
    <dt class="col-sm-3">Reserva</dt>
    <dd class="col-sm-9">@Model.Booking?.LocatorCode ?? $"Booking {Model.BookingId}"</dd>

    <dt class="col-sm-3">Monto</dt>
    <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PaymentId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
