@model IEnumerable<Aeromvp.Models.Payment>
@{
    ViewData["Title"] = "Pagos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Pagos</h1>
    <span class="text-muted">Los pagos se crean desde una reserva.</span>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Reserva</th>
            <th>MÃ©todo</th>
            <th>Estado</th>
            <th>Monto</th>
            <th>Creado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PaymentId</td>
            <td>@(item.Booking != null ? item.Booking.LocatorCode : $"Booking {item.BookingId}")</td>
            <td>@item.Method</td>
            <td>@item.Status</td>
            <td>@item.Amount.ToString("C")</td>
            <td>@item.CreatedAtUtc.ToLocalTime().ToString("g")</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.PaymentId">Detalles</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.PaymentId">Editar</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.PaymentId">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
