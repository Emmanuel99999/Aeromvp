@model Aeromvp.Models.Payment
@{
    ViewData["Title"] = "Detalle de pago";
}

<h1>Detalle de pago</h1>

<div class="mb-3">
    <a class="btn btn-outline-secondary" asp-action="Index">Volver al listado</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.PaymentId">Editar</a>
</div>

<dl class="row">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Model.PaymentId</dd>

    <dt class="col-sm-3">Reserva</dt>
    <dd class="col-sm-9">@Model.Booking?.LocatorCode ?? $"Booking {Model.BookingId}"</dd>

    <dt class="col-sm-3">MÃ©todo</dt>
    <dd class="col-sm-9">@Model.Method</dd>

    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Monto</dt>
    <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

    <dt class="col-sm-3">Referencia</dt>
    <dd class="col-sm-9">@Model.TransactionReference ?? "-"</dd>

    <dt class="col-sm-3">Tarjeta</dt>
    <dd class="col-sm-9">@Model.CardLast4 ?? "-"</dd>

    <dt class="col-sm-3">IP Cliente</dt>
    <dd class="col-sm-9">@Model.ClientIp ?? "-"</dd>

    <dt class="col-sm-3">Creado</dt>
    <dd class="col-sm-9">@Model.CreatedAtUtc.ToLocalTime().ToString("g")</dd>

    @if (Model.UpdatedAtUtc.HasValue)
    {
        <dt class="col-sm-3">Actualizado</dt>
        <dd class="col-sm-9">@Model.UpdatedAtUtc.Value.ToLocalTime().ToString("g")</dd>
    }
</dl>
